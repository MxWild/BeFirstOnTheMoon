<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash">

    <ImageView
        android:id="@+id/sun"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_sun"
        android:layout_gravity="top|end"/>

    <ImageView
        android:id="@+id/comet_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_comet_left"
        android:layout_gravity="top"/>

    <ImageView
        android:id="@+id/comet_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_comet_right"
        android:layout_gravity="top"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_splash"
        android:fontFamily="@font/playfair_display_sc"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:background="@color/black"
        android:padding="4dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="bottom"/>

    <ImageView
        android:id="@+id/cat_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/cat"
        android:layout_gravity="top"/>
</FrameLayout>