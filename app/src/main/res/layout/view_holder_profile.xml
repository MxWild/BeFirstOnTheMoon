<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/planet_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_marsdetails"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/planet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:fontFamily="@font/playfair_display_sc"
        app:layout_constraintStart_toEndOf="@id/planet_img"
        app:layout_constraintTop_toTopOf="@id/planet_img"
        app:layout_constraintBottom_toBottomOf="@id/planet_img"
        tools:text="Марс"/>

    <TextView
        android:id="@+id/sectors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/planet_item_color"
        android:textSize="24sp"
        android:lineSpacingExtra="5dp"
        android:letterSpacing="0.1"
        android:fontFamily="@font/playfair_display_sc_black"
        app:layout_constraintStart_toStartOf="@id/planet_name"
        app:layout_constraintTop_toBottomOf="@id/planet_name"
        tools:text="Участок 12364\nУчасток 24526"/>

</androidx.constraintlayout.widget.ConstraintLayout>